extends layout

block content
  h1  Send Token
  form(method='POST', action='/send')
    #form-group
      label Address:
      input.form-control(name='address', type='text')
    #form-group
      label Amount:
      input.form-control(name='amount', type='text')
    #form-group
      label Private Key:
      input.form-control(name='privkey', type='password')
    br
    input.btn.btn-primary(type='submit', value='Submit')
